{
	"compilerOptions": {
	  "module": "commonjs",
	  "target": "es2020",
	  "lib": ["es2020"],
	  "outDir": "dist",
	  "rootDir": "src",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "sourceMap": true,
	  "types": ["vscode", "mocha"] // Ensure this line is present
	},
	"exclude": ["node_modules", ".vscode-test"]
  }
  